<%- include ('header', {session}); %>
<br><br>
<div class="card-pro">
    <div class="card-header">
        <img class="profile-img" src="../subidas/perfil/<%= session.file %>" alt="elon">
    </div>

    <div class="card-body">
        <p class="full-name"><%= session.nombre %> <%= session.apellido %></p>
         <hr>
        <p class="username">correo: <%= session.email %></p>
         <hr>
        <p >Teléfono: <strong><%= session.telefono %></strong></p>
         <hr>
        <p class="desc">Descripción<br><strong><%= session.desc %></strong></p><br>
        <% if(session.trabajo == "si"){ %>
        <a href="/CrearPublicacion" type="btn" class="btn btn-success">Crear Publicaciones</a><br><br>
        <a href="#" type="btn" class="btn btn-danger">Eliminar Publicaciones</a><br><br>
        <% }
        %>
    </div>
    <% if(session.trabajo == "si"){ %>
    <div class="card-footer">
        <div class="col1">
            <p><span class="count"><%= works.length %></span> Trabajo(s)</p>
        </div>
    </div>
    <% }
    %>

</div>

<main>

  <section class="cards">
        <% if(session.trabajo == "si"){
        for(var i = 0; i < works.length; i++) { %>
        <div class="card">
            <div class="card__image-container">
                <img src="../subidas/portada/<%= works[i].file %>" alt="mountain">
            </div>
            <div class="card__content">
                <p class="card__title text--medium">
                    <a href="../trabajos?dp=<%= works[i]._id %>&du=<%= works[i].userID %>" class="ir">
                        <strong><%= works[i].publicaciones.tituloTrabajo %></strong>
                    </a>
                </p>
                <div class="card__info">
                  <a href="../perfilView?ud=<%= works[i].userID %>" class="card bg-success text-white" style="margin-right: 15px;"><%= works[i].nombre %></a>
                  <a class="card bg-info text-white" style="margin-right: 15px;"><%= works[i].publicaciones.lugar %></a>
                  <a href="../editPublicacion?wd=<%= works[i]._id %>" class="card bg-danger text-white">Editar</a>
                </div>
                <br>
            </div>
        </div>
        <% }
        }
        %>
    </section>

</main>
<%- include ('footer') %>
