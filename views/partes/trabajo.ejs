<%- include ('header', {session}); %>

<br>
<div class="container">


    <h1><%= workDp.publicaciones.tituloTrabajo %></h1><br>
    <h4>Breve descripción del trabajo</h4><br>
    <p><%= workDp.publicaciones.descripcion %></p><br>
    <hr>
    <h4>Informacion sobre el trabajo</h4>
    <hr>
    <form action="/agregarCita" method="POST">
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Habilidades y Funciones</h5>
                <ul>
                  <% for(var i = 0; i < userDu.servicio.areaTrabajo.length; i++) {
                      if(userDu.servicio.areaTrabajo[i]){ %><br>
                    <li class="list-group"> ➨ <%= userDu.servicio.areaTrabajo[i] %></li>
                  <% } } %>
                </ul>
                <hr>
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Muestra del trabajo</h5><br>
                <img src="../subidas/portada/<%= workDp.file %>" width="400" alt="">
            </div>
        </div>
        <hr>
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Categoria del empleo</h5>
                <label for="inputEmail4"><%= workDp.publicaciones.categoria %></label>
                <hr>
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Pago estimado</h5>
                <label for="inputEmail4"></label>
                <hr>
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Lugar</h5><br>
                <label for="inputEmail4"> ➨ <%= workDp.publicaciones.lugar %></label>
                <br>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8084482.303436115!2d-84.60334715297978!3d8.352262073007717!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa61583c8be2be3%3A0x79eee04d1fa59bcf!2zUGFuYW3DoQ!5e0!3m2!1ses-419!2spa!4v1593381353062!5m2!1ses-419!2spa"
                    width="500" height="400" frameborder="0" style="border:0;" allowfullscreen=""
                    aria-hidden="false" tabindex="0"></iframe>
                <hr>
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-6">
                <h5>Cliente</h5>
                <label for="inputEmail4"><a href="../perfilView?ud=<%= userDu._id %>"> <%= userDu.nombre + ' ' + userDu.apellido %></a></label>
                <hr>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <h5>Fecha de Publicación</h5>
                <label for="inputEmail4"><%= workDp.createdAt.getDate() + ' / ' + workDp.createdAt.getMonth() + ' / ' + workDp.createdAt.getFullYear() %></label>
                <hr>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <h5>Contactar</h5>
                <label for="inputEmail4"><%= userDu.telefono %></label>
                <hr>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <h5>Comentarios</h5><br>
                <textarea name="" id="" cols="70" rows="6.7"></textarea><br><br>
                <a href="#" class="btn btn-info">Comentar</a>
            </div>
        </div>
    </form>
</div><br>
<%- include ('footer') %>
